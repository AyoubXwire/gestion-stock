{% extends 'base.html.twig' %}

{% block body %}

<h1 class="display-4">{{category.name}}</h1>

<img src="{{category.image}}" alt="category">
<div class="my-4">
    <a class="btn btn-primary" href="{{path('category_edit', {'id': category.id})}}">update</a>
    <a class="btn btn-danger" href="{{path('category_delete', {'id': category.id})}}">delete</a>
</div>

<h2>List of products</h2>
<ul>
{% for product in category.products %}

    <a href="{{path('product_show', {'id': product.id})}}"><li>{{product.name}}</li></a>

{% endfor %}
</ul>

{% endblock %}
